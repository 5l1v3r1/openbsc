#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

DEB_UPSTREAM_VERSION=$(shell dpkg-parsechangelog | sed -rne 's,^Version: ([^-]+).*,\1,p')

%:
	dh --sourcedirectory=openbsc --with autoreconf $@ 

# this requires debhelper 7.0.50 or above, which lenny doesn't have yet!
#override_dh_auto_configure:
#	dh_auto_configure -- --enable-nat --enable-osmo-bsc

build: build-stamp
build-stamp:
	dh --sourcedirectory=openbsc --with autoreconf build --before configure
	dh_auto_configure --sourcedirectory=openbsc -- --enable-nat --enable-osmo-bsc
	dh --sourcedirectory=openbsc --with autoreconf build --after configure
	touch build-stamp

tarball-version:
	git describe --abbrev=4 --match '*.*.*' $(DEB_UPSTREAM_VERSION) | sed 's/-/./;s/\(.*\)-g/\1-/' > .tarball-version

